{
    "name": "todo-plus",
    "displayName": "Todo Plus",
    "description": "Create and manage TODOS with enhanced functionality.",
    "version": "0.0.1",
    "publisher": "azadratzki",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:typescript",
        "onCommand:extension.todoPlus"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.todoPlus",
                "title": "Open Todo Plus Panel"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "ignore": "^5.0.2"
    }
}
